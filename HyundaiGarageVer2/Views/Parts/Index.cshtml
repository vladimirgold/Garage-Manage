@model IEnumerable<HyundaiGarageVer2.Models.Part>

@{
    ViewBag.Title = "Parts";
}

<h2>Parts</h2>

<p>
    @Html.ActionLink("Statistics", "PartStatistics", "Parts")
</p>
<p>

    @Html.ActionLink("Parts Quantity Statistics Graph", "PartStatisticsGraph", "Parts")
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Treatment.TreatmentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManuDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Treatment.TreatmentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PartName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManuDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PartPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PartID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PartID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PartID })
        </td>
    </tr>
}

</table>
