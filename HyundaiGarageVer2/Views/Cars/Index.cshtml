@model IEnumerable<HyundaiGarageVer2.Models.Car>

@{
    ViewBag.Title = "Cars";
}

<h2>Cars</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Licence Plate
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Model)
